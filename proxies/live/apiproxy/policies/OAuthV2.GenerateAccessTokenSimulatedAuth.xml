<OAuthV2 async="false" continueOnError="false" enabled="true" name="OAuthV2.GenerateAccessTokenSimulatedAuth">
  <Operation>GenerateAccessToken</Operation>
  <RedirectUri>request.formparam.redirect_uri</RedirectUri>
  <!-- 10 minutes: -->
  <ExpiresIn ref="private.apigee.access_token_expiry_ms">600000</ExpiresIn>
  <!-- 10 hours: -->
  <RefreshTokenExpiresIn ref="private.apigee.refresh_token_expiry_ms">36000000</RefreshTokenExpiresIn>
  <SupportedGrantTypes>
      <GrantType>authorization_code</GrantType>
  </SupportedGrantTypes>
  <GenerateResponse enabled="false"/>
  <Attributes>
    <Attribute name="id_token" ref="jwt.GenerateJWT.SimulatedAuth.generated_jwt" display="true"/>
    <Attribute name="id_token-subject" ref="jwt.GenerateJWT.SimulatedAuth.generated_jwt.claim.subject" display="true"/>
    <Attribute name="id_token-issuer" ref="jwt.GenerateJWT.SimulatedAuth.generated_jwt.claim.issuer" display="true"/>
    <Attribute name="id_token-acr" ref="jwt.GenerateJWT.SimulatedAuth.generated_jwt.claim.acr" display="true"/>
    <Attribute name="id_token-amr" ref="jwt.GenerateJWT.SimulatedAuth.generated_jwt.claim.amr" display="true"/>
    <Attribute name="_first_issued" ref="system.timestamp" display="false"/>
  </Attributes>
</OAuthV2>
