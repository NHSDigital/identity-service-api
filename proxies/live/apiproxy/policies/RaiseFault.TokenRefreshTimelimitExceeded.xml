<RaiseFault async="false" continueOnError="false" enabled="true" name="RaiseFault.TokenRefreshTimelimitExceeded">
  <FaultResponse>
    <Set>
      <Payload contentType="application/json">
        {
          "error" : "refresh_time_limit_exceeded",
          "error_description" :"Cannot refresh token {private.apigee.refresh_tokens_validity_ms}ms after generation",
          "message_id": "{messageid}"
        }
      </Payload>
      <StatusCode>400</StatusCode>
      <ReasonPhrase>Bad Request</ReasonPhrase>
    </Set>
  </FaultResponse>
  <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
</RaiseFault>
