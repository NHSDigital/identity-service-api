<AssignMessage async="false" continueOnError="false" enabled="true" name="AssignMessage.SetAuthorizationRedirect">
  <Set>
    <StatusCode>302</StatusCode>
    <Headers>
      <Header name="Location">{private.apigee.authorize_endpoint}?response_type={request.queryparam.response_type}&amp;client_id={private.apigee.client_id}&amp;redirect_uri={private.apigee.redirect_uri}&amp;scope=openid&amp;state={apigee.state}</Header>
    </Headers>
  </Set>
  <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
  <AssignTo createNew="false" transport="http" type="response" />
</AssignMessage>
