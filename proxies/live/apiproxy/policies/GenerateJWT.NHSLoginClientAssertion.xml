<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<GenerateJWT async="false" continueOnError="false" enabled="true" name="GenerateJWT.NHSLoginClientAssertion">
    <DisplayName>GenerateJWT.NHSLoginClientAssertion</DisplayName>
    <Algorithm>RS512</Algorithm>
    <PrivateKey>
        <Value ref="private.jwt"/>
        <Id>{identity-service-config.nhs_login.kid}</Id>
    </PrivateKey>
    <Subject>{identity-service-config.nhs_login.client_id}</Subject>
    <Issuer>{identity-service-config.nhs_login.client_id}</Issuer>
    <Audience>{identity-service-config.nhs_login.token_endpoint}</Audience>
    <ExpiresIn>1h</ExpiresIn>
    <OutputVariable>client_assertion</OutputVariable>
</GenerateJWT>