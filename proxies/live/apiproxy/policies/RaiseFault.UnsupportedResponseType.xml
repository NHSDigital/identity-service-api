<RaiseFault async="false" continueOnError="false" enabled="true" name="RaiseFault.UnsupportedResponseType">
  <FaultResponse>
    <Set>
      <Payload contentType="application/json">
        {
          "error": "unsupported_response_type",
          "error_description": "Invalid response type: {request.queryparam.response_type}",
          "message_id": "{messageid}"
        }
      </Payload>
      <StatusCode>400</StatusCode>
      <ReasonPhrase>Bad Request</ReasonPhrase>
    </Set>
  </FaultResponse>
  <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
</RaiseFault>
