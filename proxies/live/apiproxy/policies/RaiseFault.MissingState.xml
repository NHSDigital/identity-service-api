<RaiseFault async="false" continueOnError="false" enabled="true" name="RaiseFault.MissingState">
    <FaultResponse>
        <Set>
            <StatusCode>302</StatusCode>
            <Headers>
                <Header name="Content-Type">application/x-www-form-urlencoded</Header>
                <Header name="Location">{private.apigee.authorize_endpoint}?redirect_uri={private.apigee.redirect_uri}?error=invalid_request&amp;error_description=state+is+missing</Header>
            </Headers>
            <Payload contentType="text/plain"/>
          </Set>
    </FaultResponse>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
</RaiseFault>
