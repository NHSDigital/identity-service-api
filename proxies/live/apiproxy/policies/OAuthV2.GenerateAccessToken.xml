<OAuthV2 async="false" continueOnError="false" enabled="true" name="OAuthV2.GenerateAccessToken">
    <Operation>GenerateAccessToken</Operation>
    <ExternalAuthorization>true</ExternalAuthorization>
    <ExternalAccessToken>externalAccessToken</ExternalAccessToken>
    <ExternalRefreshToken>externalRefreshToken</ExternalRefreshToken>
    <RedirectUri>request.formparam.redirect_uri</RedirectUri>
    <ExpiresIn ref="expires_in">1800000</ExpiresIn>
    <RefreshTokenExpiresIn>-1</RefreshTokenExpiresIn>
    <SupportedGrantTypes>
        <GrantType>authorization_code</GrantType>
    </SupportedGrantTypes>
    <GenerateResponse enabled="false"/>
    <StoreToken>true</StoreToken>
</OAuthV2>
