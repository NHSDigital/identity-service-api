<RaiseFault async="false" continueOnError="false" enabled="true" name="RaiseFault.MaxRefreshExceeded">
  <FaultResponse>
    <Set>
      <Payload contentType="application/json">
        {
          "error" : "max_refresh_exceeded",
          "error_description" :"Cannot refresh token more than {private.apigee.max_token_refreshes_allowed} times"
        }
      </Payload>
      <StatusCode>400</StatusCode>
      <ReasonPhrase>Bad Request</ReasonPhrase>
    </Set>
  </FaultResponse>
  <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
</RaiseFault>
