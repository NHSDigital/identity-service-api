<RaiseFault async="false" continueOnError="false" enabled="true" name="RaiseFault.UnsupportedGrantType">
  <FaultResponse>
    <Set>
      <Payload contentType="application/json">
        {
          "error" : "unsupported_grant_type",
          "error_description" :"grant_type: '{request.formparam.grant_type}' is unsupported",
          "message_id": "{messageid}"
        }
      </Payload>
      <StatusCode>400</StatusCode>
      <ReasonPhrase>Bad Request</ReasonPhrase>
    </Set>
  </FaultResponse>
  <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
</RaiseFault>
