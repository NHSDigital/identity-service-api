<TargetEndpoint name="identity-server">
  <DefaultFaultRule>
    <Step>
      <Name>AssignMessage.CatchallErrorMessage</Name>
    </Step>
  </DefaultFaultRule>
  <PreFlow>
    <Request>
      <Step>
        <Name>Quota</Name>
      </Step>
      <Step>	
        <Name>SpikeArrest</Name>	
      </Step>
    </Request>
  </PreFlow>
  <HTTPTargetConnection>
    <SSLInfo>
      <Enabled>true</Enabled>
    </SSLInfo>
    <LoadBalancer>
      <Server name="{{ IDENTITY_TARGET_SERVER }}" />
    </LoadBalancer>
  </HTTPTargetConnection>
</TargetEndpoint>
